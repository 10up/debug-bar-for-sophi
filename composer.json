{
  "name": "10up/sophi-debug-bar",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "10up",
      "email": "info@10up.com"
    }
  ],
  "require": {
    "php": ">=7.0"
  },
  "autoload": {
    "psr-4": {
      "SophiDebugBar\\": "includes/classes/"
    }
  },
  "require-dev": {
    "10up/phpcs-composer": "dev-master"
  },
  "archive": {
	"name": "sophi-debug-bar",
	"exclude": [
		"/.*",
		"/assets",
		"!/dist",
		"!/languages",
		"!/vendor",
		"/composer.json",
		"/composer.lock",
		"/node_modules",
		"/package.json",
		"/package-lock.json",
		"/phpcs.xml"
	]
},
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
